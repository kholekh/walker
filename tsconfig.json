{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020",
    "noEmit": false,
    "incremental": false,
    "outDir": "dist"
  },
  "exclude": [
    "**/node_modules/",
    "**/build/",
    "**/dist/",
    "**/coverage/",
    "**/*.tsbuildinfo"
  ]
}
